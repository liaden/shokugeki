- if defined?(title)
  %h2= title
= simple_form_for(@search, html: { class: 'form-horizontal' } ) do |f|
  = f.error_notification

  .row
    .col-md-4
      = f.input :ingredients_csv, as: :string
    .col-md-1
    .col-md-4
      = f.input :hidden_ingredients_csv, as: :string
    .col-md-1
    .col-md-2
      = f.input :occurrences_minimum

  .row
    .col-md-4
      = f.submit "Search", html: { class: 'btn btn-primary'}