= simple_form_for(@recipe, html: { class: 'form-horizontal' } ) do |f|
  = f.error_notification

  .row
    .col-md-4
      = f.input :name
    .col-md-4
      = f.input :ingredients_csv
    .col-md-4
      = f.input :url
  .row
    .col-md-4
      = f.button :submit, html: { class: 'btn btn-primary'}